{
  "name": "czech-events",
  "version": "0.8.2",
  "author": "Pavol Hejný & Tereza Texlová",
  "homepage": "https://czech.events",
  "private": true,
  "scripts": {
    "preversion": "npm run prettier-commit && npm run frontend-build",
    "postversion": "git push && git push --tags && npm run frontend-deploy && npm run server-deploy",
    "prettier": "prettier --config .prettierrc --write \"{src,server}/**/*.{ts,tsx,css}\"",
    "prettier-watch": "onchange \"{src,server}/**/*.{ts,tsx,css}\" -- prettier --config .prettierrc --write \"{{changed}}\"",
    "prettier-commit": "git diff --exit-code && npm run prettier && git add . && git commit --allow-empty -m \"Prettier\"",
    "frontend-start": "react-scripts start",
    "frontend-build": "react-scripts build",
    "frontend-test": "react-scripts test",
    "frontend-deploy": "echo czech.events >>build/CNAME && gh-pages -d build",
    "server-start": "ts-node -P ./tsconfig.json -r dotenv/config server/src/index.ts",
    "server-develop": "onchange -i \"./src/**/*.{ts,tsx,js,json}\" -- npm run server",
    "server-deploy": "ts-node -r dotenv/config ./scripts/deploy.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:hejny/talks.git"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/node": "^12.12.21",
    "@types/papaparse": "^4.5.11",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "gh-pages": "^2.1.1",
    "moment": "^2.24.0",
    "onchange": "^3.3.0",
    "papaparse": "^5.1.0",
    "prettier": "^1.18.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.1",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.7",
    "body-parse": "^0.1.0",
    "configchecker": "^1.0.6",
    "cors": "^2.8.4",
    "date-fns": "^2.9.0",
    "dotenv": "^6.1.0",
    "express": "^4.17.1",
    "objection": "^2.1.2",
    "supertest": "^4.0.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.7.5",
    "uuid": "^3.4.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
