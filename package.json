{
  "name": "czech-events",
  "version": "1.5.0",
  "author": "Pavol Hejný & Tereza Texlová",
  "homepage": "https://czech.events",
  "private": true,
  "scripts": {
    "preversion": "npm run prettier-commit",
    "postversion": "git push && git push --tags && npm run frontend-deploy && npm run server-deploy",
    "prettier": "prettier --config .prettierrc --write \"{src,server,public,scripts}/**/*.{ts,tsx,js,jsx,html,css}\"",
    "prettier-watch": "onchange \"{src,server,public,scripts}/**/*.{ts,tsx,js,jsx,html,css}\" -- prettier --config .prettierrc --write \"{{changed}}\"",
    "prettier-commit": "git diff --exit-code && npm run prettier && git add . && git commit --allow-empty -m \"Prettier\"",
    "frontend-develop": "cross-env PORT=3000 react-scripts start",
    "frontend-develop-emit-decorator-metadata": "tsc --project src/model/database/_emitDecoratorMetadata.tsconfig.json && tsc --watch --project src/model/database/_emitDecoratorMetadata.tsconfig.json",
    "frontend-develop-delete-decorator-metadata": "find ./src/model/database/ -name '*.js' -delete",
    "frontend-build": "npm run frontend-develop-delete-decorator-metadata && react-scripts build",
    "TODO: frontend-test": "react-scripts test",
    "frontend-deploy": "npm run frontend-build && echo czech.events >>build/CNAME && gh-pages -d build",
    "server-start": "ts-node --project ./server/tsconfig.json ./server/index.ts",
    "server-develop": "onchange -i \"./{src,server}/**/*.{ts,tsx,js,json}\" -- npm run server-start",
    "server-deploy": "cd ./scripts && npm start",
    "generate-database-models": "cd ./scripts && npm run generate-database-models"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hejny/events"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.1",
    "@types/json5": "0.0.30",
    "@types/node": "^12.12.21",
    "@types/node-fetch": "^2.5.7",
    "@types/papaparse": "^4.5.11",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.7",
    "body-parse": "^0.1.0",
    "configchecker": "^1.0.6",
    "cors": "^2.8.4",
    "cross-env": "^7.0.0",
    "date-fns": "^2.9.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "gh-pages": "^2.1.1",
    "json5": "^2.1.3",
    "moment": "^2.24.0",
    "mysql2": "^2.1.0",
    "node-fetch": "^2.6.0",
    "onchange": "^3.3.0",
    "papaparse": "^5.1.0",
    "prettier": "^1.18.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "reflect-metadata": "^0.1.13",
    "supertest": "^4.0.2",
    "ts-node": "^8.6.2",
    "typeorm": "^0.2.22",
    "typescript": "^3.8.2",
    "uuid": "^3.4.0",
    "waitasecond": "^1.1.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
