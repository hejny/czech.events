{
  "name": "czech-events",
  "version": "3.0.0",
  "private": false,
  "author": "Pavol Hejný & Tereza Texlová",
  "homepage": "https://czech.events",
  "repository": {
    "type": "git",
    "url": "https://github.com/hejny/czech.events"
  },
  "scripts": {
    "frontend-develop": "next dev -p 7754",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --config jestconfig.json",
    "postversion": "git push && git push --tags && npm run frontend-deploy && npm run server-deploy",
    "old-!!!-frontend-develop": "cross-env PORT=7754 SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "old-!!!-frontend-develop-emit-decorator-metadata": "tsc --project src/model/database/_emitDecoratorMetadata.tsconfig.json && tsc --watch --project src/model/database/_emitDecoratorMetadata.tsconfig.json",
    "old-!!!-frontend-develop-delete-decorator-metadata": "find ./src/model/database/ -name '*.js' -delete",
    "old-!!!-frontend-build": "npm run frontend-develop-delete-decorator-metadata && cross-env SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "old-!!!-frontend-deploy": "npm run frontend-build && echo czech.events >>build/CNAME && gh-pages -d build",
    "server-start": "ts-node --project ./server/tsconfig.json ./server/index.ts",
    "server-develop": "ts-node-dev --project ./server/tsconfig.json ./server/index.ts",
    "server-deploy": "cd ./scripts && npm start",
    "generate-database-models": "cd ./scripts && npm run generate-database-models",
    "update-packages": "npm-check-updates -u && git add ./package.json && git commit -m \"Update packages\" && npm run force-reinstall",
    "force-reinstall": "rm ./package-lock.json ; rm -rf ./node_modules ; npm install && git add ./package-lock.json && git commit -m \"Force reinstall\""
  },
  "dependencies": {
    "@next/font": "13.1.6",
    "@types/node": "18.11.19",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "body-parse": "0.1.0",
    "configchecker": "1.3.0",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "date-fns": "2.16.1",
    "dayjs": "1.10.7",
    "destroyable": "0.8.0",
    "dotenv": "8.2.0",
    "eslint": "8.33.0",
    "eslint-config-next": "13.1.6",
    "express": "4.17.1",
    "gh-pages": "3.1.0",
    "ical": "^0.8.0",
    "ical-generator": "3.6.0",
    "jest": "^29.4.1",
    "json5": "2.1.3",
    "locate-app": "1.2.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.39",
    "mysql2": "2.2.5",
    "n12": "^1.0.0",
    "next": "13.1.6",
    "node-fetch": "2.6.7",
    "onchange": "7.1.0",
    "papaparse": "5.3.0",
    "prettier": "2.2.1",
    "puppeteer-core": "^19.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reflect-metadata": "0.1.13",
    "rrule": "2.6.8",
    "save-ukraine": "0.16.0",
    "spacetrim": "^0.6.2",
    "styled-components": "5.2.1",
    "ts-jest": "^29.0.5",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typeorm": "0.2.30",
    "typescript": "4.9.5",
    "uuid": "8.3.2",
    "waitasecond": "1.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "11.2.3",
    "@testing-library/user-event": "12.6.0",
    "@types/body-parser": "1.19.0",
    "@types/cors": "2.8.9",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.11",
    "@types/ical": "^0.8.0",
    "@types/json5": "0.0.30",
    "@types/luxon": "2.0.7",
    "@types/node": "18.11.9",
    "@types/node-fetch": "2.5.8",
    "@types/papaparse": "5.2.4",
    "@types/prettier": "^2.7.2",
    "@types/styled-components": "5.1.7",
    "@types/uuid": "8.3.0"
  }
}
