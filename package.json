{
  "name": "czech-events",
  "version": "0.8.2",
  "author": "Pavol Hejný & Tereza Texlová",
  "homepage": "https://czech.events",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "prettier": "prettier --config .prettierrc --write \"src/**/*.{ts,tsx,css}\"",
    "prettier-watch": "onchange \"src/**/*.{ts,tsx,css}\" -- prettier --config .prettierrc --write \"{{changed}}\"",
    "prettier-commit": "git diff --exit-code && npm run prettier && git add . && git commit --allow-empty -m \"Prettier\"",
    "deploy": "echo czech.events >>build/CNAME && gh-pages -d build",
    "preversion": "npm run prettier-commit && npm run build",
    "postversion": "git push && git push --tags && npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:hejny/talks.git"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.0.24",
    "@types/node": "^12.12.21",
    "@types/papaparse": "^4.5.11",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "configchecker": "^0.4.1",
    "gh-pages": "^2.1.1",
    "moment": "^2.24.0",
    "onchange": "^3.3.0",
    "papaparse": "^5.1.0",
    "prettier": "^1.18.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "typescript": "^3.7.4"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
